{
    "name": "Developer Terminal",
    "version": "1.0.0",
    "category": "developer",
    "description": "Retro terminal-inspired theme with monospace fonts",
    "fields": [
        {"name": "profileImage", "label": "Profile Photo", "type": "image", "section": "Personal Info"},
        {"name": "fullName", "label": "Full Name", "type": "text", "placeholder": "root", "required": true, "section": "Personal Info"},
        {"name": "handle", "label": "Handle", "type": "text", "placeholder": "@coder", "section": "Personal Info"},
        {"name": "title", "label": "Title", "type": "text", "placeholder": "Backend Developer", "required": true, "section": "Personal Info"},
        {"name": "location", "label": "Location", "type": "text", "placeholder": "localhost", "section": "Personal Info"},
        {"name": "bio", "label": "About", "type": "textarea", "placeholder": "Console.log('Hello World');", "section": "Personal Info"},
        {"name": "email", "label": "Email", "type": "email", "required": true, "section": "Contact"},
        {"name": "github", "label": "GitHub", "type": "url", "section": "Contact"},
        {"name": "linkedin", "label": "LinkedIn", "type": "url", "section": "Contact"},
        {"name": "skills", "label": "Skills", "type": "repeater", "itemLabel": "Skill", "section": "Skills", "fields": [{"name": "name", "label": "Skill", "type": "text", "placeholder": "Python"}]},
        {"name": "projects", "label": "Projects", "type": "repeater", "itemLabel": "Project", "section": "Projects", "fields": [
            {"name": "name", "label": "Name", "type": "text"},
            {"name": "description", "label": "Description", "type": "textarea"},
            {"name": "tech", "label": "Tech", "type": "text"},
            {"name": "github", "label": "GitHub", "type": "url"},
            {"name": "live", "label": "Live", "type": "url"}
        ]},
        {"name": "experience", "label": "Experience", "type": "repeater", "itemLabel": "Job", "section": "Experience", "fields": [
            {"name": "role", "label": "Role", "type": "text"},
            {"name": "company", "label": "Company", "type": "text"},
            {"name": "period", "label": "Period", "type": "text"},
            {"name": "description", "label": "Description", "type": "textarea"}
        ]}
    ]
}
