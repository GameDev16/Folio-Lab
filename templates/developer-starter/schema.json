{
    "name": "Developer Starter",
    "version": "1.0.0",
    "category": "developer",
    "description": "Clean light theme for developers with sidebar navigation",
    "fields": [
        {"name": "profileImage", "label": "Profile Photo", "type": "image", "section": "Personal"},
        {"name": "fullName", "label": "Full Name", "type": "text", "required": true, "section": "Personal"},
        {"name": "title", "label": "Title", "type": "text", "required": true, "section": "Personal"},
        {"name": "tagline", "label": "Tech Stack Tagline", "type": "text", "placeholder": "React · Node · Python", "section": "Personal"},
        {"name": "location", "label": "Location", "type": "text", "section": "Personal"},
        {"name": "bio", "label": "Bio", "type": "textarea", "section": "Personal"},
        {"name": "email", "label": "Email", "type": "email", "required": true, "section": "Contact"},
        {"name": "github", "label": "GitHub", "type": "url", "section": "Contact"},
        {"name": "linkedin", "label": "LinkedIn", "type": "url", "section": "Contact"},
        {"name": "twitter", "label": "Twitter", "type": "url", "section": "Contact"},
        {"name": "skills", "label": "Skills", "type": "repeater", "itemLabel": "Skill", "section": "Skills", "fields": [
            {"name": "category", "label": "Category", "type": "text", "placeholder": "Frontend"},
            {"name": "items", "label": "Skills (comma separated)", "type": "text", "placeholder": "React, Vue, TypeScript"}
        ]},
        {"name": "projects", "label": "Projects", "type": "repeater", "itemLabel": "Project", "section": "Projects", "fields": [
            {"name": "name", "label": "Name", "type": "text"},
            {"name": "description", "label": "Description", "type": "textarea"},
            {"name": "tech", "label": "Tech Stack", "type": "text"},
            {"name": "github", "label": "GitHub", "type": "url"},
            {"name": "live", "label": "Live Demo", "type": "url"}
        ]},
        {"name": "experience", "label": "Experience", "type": "repeater", "itemLabel": "Job", "section": "Experience", "fields": [
            {"name": "role", "label": "Role", "type": "text"},
            {"name": "company", "label": "Company", "type": "text"},
            {"name": "period", "label": "Period", "type": "text"},
            {"name": "description", "label": "Description", "type": "textarea"}
        ]}
    ]
}
